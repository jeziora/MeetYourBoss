@model MeetYourBoss.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Posts</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.companies_id, "Companies")
        </div>
        <div class="editor-field">
            @Html.DropDownList("companies_id", String.Empty)
            @Html.ValidationMessageFor(model => model.companies_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.users_id, "aspnet_Users")
        </div>
        <div class="editor-field">
            @Html.DropDownList("users_id", String.Empty)
            @Html.ValidationMessageFor(model => model.users_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.descryption)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descryption)
            @Html.ValidationMessageFor(model => model.descryption)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.date_creation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.date_creation)
            @Html.ValidationMessageFor(model => model.date_creation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.date_last_view)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.date_last_view)
            @Html.ValidationMessageFor(model => model.date_last_view)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
